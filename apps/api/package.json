{
  "name": "@amcore/api",
  "version": "0.0.1",
  "private": true,
  "description": "AMCore API Server",
  "license": "MIT",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "nest start --watch",
    "build": "nest build -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:email": "vitest run",
    "test:email:watch": "vitest watch",
    "test:email:ui": "vitest --ui",
    "test:email:cov": "vitest run --coverage",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest-e2e.config.js --runInBand",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@amcore/shared": "workspace:^",
