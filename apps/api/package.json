    "@types/uuid": "^11.0.0",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.7.0",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^7.4.0",
    "react": "^19.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
