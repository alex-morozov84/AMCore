// ===========================================
// Core Module: Users & Authentication
// ===========================================

// -----------------------------
// Enums
// -----------------------------

enum OAuthProvider {
  GOOGLE
  GITHUB
  APPLE

  @@schema("core")
}

enum Theme {
  LIGHT
  DARK
  SYSTEM

  @@schema("core")
}

// -----------------------------
// Models
// -----------------------------

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  passwordHash  String?
  name          String?
  avatarUrl     String?
  locale        String    @default("ru")
  timezone      String    @default("Europe/Moscow")

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  // Relations
  accounts                 OAuthAccount[]
  sessions                 Session[]
  settings                 UserSettings?
  passwordResetTokens      PasswordResetToken[]
  emailVerificationTokens  EmailVerificationToken[]

  @@map("users")
  @@schema("core")
}

model OAuthAccount {
  id                String        @id @default(cuid())
  userId            String
  provider          OAuthProvider
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("oauth_accounts")
  @@schema("core")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  refreshToken String   @unique // Hashed
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
  @@schema("core")
}

model UserSettings {
  id                   String  @id @default(cuid())
  userId               String  @unique
  theme                Theme   @default(SYSTEM)
  notificationsEnabled Boolean @default(true)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
  @@schema("core")
}

// -----------------------------
// Password Reset & Email Verification Tokens
// -----------------------------

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique // bcrypt hash of 64-char token
  expiresAt DateTime // createdAt + 15 minutes
  used      Boolean  @default(false)
  usedAt    DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes for performance
  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
  @@schema("core")
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique // bcrypt hash of 64-char token
  expiresAt DateTime // createdAt + 48 hours
  used      Boolean  @default(false)
  usedAt    DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes for performance
  @@index([userId])
  @@index([expiresAt])
  @@map("email_verification_tokens")
  @@schema("core")
}
