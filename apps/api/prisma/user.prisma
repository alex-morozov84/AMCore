// ===========================================
// Core Module: Users & Authentication
// ===========================================

// -----------------------------
// Enums
// -----------------------------

enum OAuthProvider {
  GOOGLE
  GITHUB
  APPLE

  @@schema("core")
}

enum Theme {
  LIGHT
  DARK
  SYSTEM

  @@schema("core")
}

enum SystemRole {
  USER
  SUPER_ADMIN

  @@schema("core")
}

// -----------------------------
// Models
// -----------------------------

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  passwordHash  String?
  name          String?
  avatarUrl     String?
  locale        String    @default("ru")
  timezone      String    @default("Europe/Moscow")

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?

  // RBAC
  systemRole  SystemRole @default(USER)

  // Relations
  accounts                 OAuthAccount[]
  sessions                 Session[]
  settings                 UserSettings?
  passwordResetTokens      PasswordResetToken[]
  emailVerificationTokens  EmailVerificationToken[]
  memberships              OrgMember[]

  @@map("users")
  @@schema("core")
}

model OAuthAccount {
  id                String        @id @default(cuid())
  userId            String
  provider          OAuthProvider
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("oauth_accounts")
  @@schema("core")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  refreshToken String   @unique // Hashed
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
  @@schema("core")
}

model UserSettings {
  id                   String  @id @default(cuid())
  userId               String  @unique
  theme                Theme   @default(SYSTEM)
  notificationsEnabled Boolean @default(true)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
  @@schema("core")
}

// -----------------------------
// Password Reset & Email Verification Tokens
// -----------------------------

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique // bcrypt hash of 64-char token
  expiresAt DateTime // createdAt + 15 minutes
  used      Boolean  @default(false)
  usedAt    DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes for performance
  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
  @@schema("core")
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique // bcrypt hash of 64-char token
  expiresAt DateTime // createdAt + 48 hours
  used      Boolean  @default(false)
  usedAt    DateTime?

  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Indexes for performance
  @@index([userId])
  @@index([expiresAt])
  @@map("email_verification_tokens")
  @@schema("core")
}

// ===========================================
// RBAC: Organizations, Roles & Permissions
// ===========================================

model Organization {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  aclVersion Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  members     OrgMember[]
  roles       Role[]
  permissions Permission[]

  @@map("organizations")
  @@schema("core")
}

model OrgMember {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  roles        MemberRole[]

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@map("org_members")
  @@schema("core")
}

model MemberRole {
  id       String @id @default(cuid())
  memberId String
  roleId   String

  member OrgMember @relation(fields: [memberId], references: [id], onDelete: Cascade)
  role   Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([memberId, roleId])
  @@map("member_roles")
  @@schema("core")
}

model Role {
  id             String  @id @default(cuid())
  name           String
  description    String?
  isSystem       Boolean @default(false) // system roles cannot be deleted
  organizationId String? // null = system template; non-null = org-specific

  organization Organization?    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  permissions  RolePermission[]
  members      MemberRole[]

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("roles")
  @@schema("core")
}

model Permission {
  id             String   @id @default(cuid())
  action         String   // 'create' | 'read' | 'update' | 'delete' | 'manage'
  subject        String   // 'Contact' | 'User' | 'Organization' | 'all'
  conditions     Json?    // CASL conditions: { "assignedToId": "${user.id}" }
  fields         String[] @default([]) // field-level: [] = all fields
  inverted       Boolean  @default(false) // explicit DENY (use sparingly)
  organizationId String?  // null = system permission

  organization Organization?    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  roles        RolePermission[]

  @@index([organizationId, subject, action])
  @@map("permissions")
  @@schema("core")
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
  @@schema("core")
}
